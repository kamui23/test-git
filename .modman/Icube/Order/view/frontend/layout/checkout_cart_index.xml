<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="cart.summary">
            <block class="Magento\Framework\View\Element\Template" name="checkout.cart.shippingoptions.title" before="-" template="Magento_Theme::text.phtml">
                <arguments>
                    <argument translate="true" name="text" xsi:type="string">Pilih Metode Pengiriman</argument>
                    <argument name="tag" xsi:type="string">strong</argument>
                    <argument name="css_class" xsi:type="string">summary title</argument>
                </arguments>
            </block>
            <block class="Icube\Order\Block\Storelist" name="storelist" template="Icube_Order::cart/storelist.phtml" after="-"/>
        </referenceContainer>

        <container name="checkout.cart.summary.bottom" label="Checkout Cart Summary Bottom" htmlTag="div" htmlClass="checkout-cart-summary-bottom">     
               
        </container>
        <move element="checkout.cart.summary.bottom" destination="checkout.cart.container" before="cart.discount" />
        <move element="checkout.cart.totals" destination="checkout.cart.summary.bottom" after="checkout.cart.summary.bottom.title" />
        
        <move element="checkout.cart.methods.bottom" destination="checkout.cart.summary.bottom" after="checkout.cart.totals" /> 

    </body>
</page>
